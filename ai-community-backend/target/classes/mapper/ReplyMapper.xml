<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.ReplyMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.Reply">
        <id column="id" property="id"/>
        <result column="comment_id" property="commentId"/>
        <result column="user_id" property="userId"/>
        <result column="reply_to_user_id" property="replyToUserId"/>
        <result column="content" property="content"/>
        <result column="likes" property="likes"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM replies WHERE id = #{id}
    </select>

    <select id="selectByCommentId" resultMap="BaseResultMap">
        SELECT * FROM replies WHERE comment_id = #{commentId} ORDER BY create_time ASC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO replies (comment_id, user_id, reply_to_user_id, content, likes, create_time)
        VALUES (#{commentId}, #{userId}, #{replyToUserId}, #{content}, #{likes}, #{createTime})
    </insert>

    <delete id="deleteById">
        DELETE FROM replies WHERE id = #{id}
    </delete>

    <delete id="deleteByCommentId">
        DELETE FROM replies WHERE comment_id = #{commentId}
    </delete>

</mapper>
