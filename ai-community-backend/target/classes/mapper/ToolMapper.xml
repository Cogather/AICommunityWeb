<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.ToolMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.Tool">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="logo" property="logo"/>
        <result column="color" property="color"/>
        <result column="link" property="link"/>
        <result column="is_featured" property="isFeatured"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM tools WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM tools
        <if test="featured != null and featured == true">
            WHERE is_featured = 1
        </if>
        ORDER BY create_time DESC
    </select>

    <resultMap id="ToolItemResultMap" type="com.aicommunity.dto.ToolsConfigResponse$ToolItem">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="logo" property="logo"/>
        <result column="color" property="color"/>
        <result column="link" property="link"/>
        <collection property="banners" ofType="com.aicommunity.dto.ToolsConfigResponse$BannerItem"
                    select="selectBannersByToolId" column="id"/>
    </resultMap>

    <select id="selectAllWithBanners" resultMap="ToolItemResultMap">
        SELECT * FROM tools ORDER BY create_time DESC
    </select>

    <resultMap id="BannerItemResultMap" type="com.aicommunity.dto.ToolsConfigResponse$BannerItem">
        <id column="id" property="id"/>
        <result column="image" property="image"/>
        <result column="title" property="title"/>
        <result column="desc" property="desc"/>
        <result column="order" property="order"/>
    </resultMap>

    <select id="selectBannersByToolId" resultMap="BannerItemResultMap">
        SELECT * FROM tool_banners WHERE tool_id = #{id} ORDER BY `order` ASC, id ASC
    </select>

    <update id="updateById">
        UPDATE tools
        SET name = #{name},
            `desc` = #{desc},
            logo = #{logo},
            color = #{color},
            link = #{link},
            update_time = NOW()
        WHERE id = #{id}
    </update>

</mapper>
