<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.MessageMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.Message">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="type" property="type"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="link" property="link"/>
        <result column="is_read" property="isRead"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM messages
        WHERE user_id = #{userId}
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
        ORDER BY create_time DESC
    </select>

    <update id="updateReadStatus">
        UPDATE messages SET is_read = #{isRead}, update_time = NOW() WHERE id = #{id}
    </update>

    <update id="updateAllReadStatus">
        UPDATE messages SET is_read = #{isRead}, update_time = NOW() WHERE user_id = #{userId} AND is_read = 0
    </update>

    <delete id="deleteById">
        DELETE FROM messages WHERE id = #{id}
    </delete>

    <select id="countUnreadByUserId" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM messages WHERE user_id = #{userId} AND is_read = 0
    </select>

</mapper>
