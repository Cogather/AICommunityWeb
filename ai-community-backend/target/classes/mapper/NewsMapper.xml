<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.NewsMapper">

    <resultMap id="NewsItemResultMap" type="com.aicommunity.dto.NewsResponse$NewsItem">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="image" property="image"/>
        <result column="date" property="date"/>
        <result column="link" property="link"/>
        <result column="order" property="order"/>
    </resultMap>

    <resultMap id="HonorNewsItemResultMap" type="com.aicommunity.dto.HonorHomeResponse$NewsItem">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="image" property="image"/>
        <result column="date" property="date"/>
        <result column="link" property="link"/>
        <result column="order" property="order"/>
    </resultMap>

    <select id="selectAll" resultMap="NewsItemResultMap">
        SELECT * FROM news ORDER BY `order` ASC, id ASC
    </select>

    <select id="selectTop" resultMap="HonorNewsItemResultMap">
        SELECT * FROM news ORDER BY `order` ASC, id ASC LIMIT #{limit}
    </select>

    <delete id="deleteAll">
        DELETE FROM news
    </delete>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO news (title, image, date, link, `order`, create_time)
        VALUES (#{title}, #{image}, #{date}, #{link}, #{order}, NOW())
    </insert>

</mapper>
