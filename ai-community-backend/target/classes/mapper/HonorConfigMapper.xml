<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.HonorConfigMapper">

    <select id="selectBannerImage" resultType="java.lang.String">
        SELECT banner_image FROM honor_config LIMIT 1
    </select>

    <update id="updateBannerImage">
        UPDATE honor_config SET banner_image = #{bannerImage}, update_time = NOW()
    </update>

    <resultMap id="AwardItemResultMap" type="com.aicommunity.dto.HonorAwardsResponse$AwardItem">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="image" property="image"/>
        <result column="order" property="order"/>
    </resultMap>

    <select id="selectAwards" resultMap="AwardItemResultMap">
        SELECT * FROM honor_awards ORDER BY `order` ASC, id ASC
    </select>

    <delete id="deleteAllAwards">
        DELETE FROM honor_awards
    </delete>

    <insert id="insertAward" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO honor_awards (name, `desc`, image, `order`, create_time)
        VALUES (#{name}, #{desc}, #{image}, #{order}, NOW())
    </insert>

</mapper>
