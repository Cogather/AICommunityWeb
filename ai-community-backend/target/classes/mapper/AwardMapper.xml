<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.AwardMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.Award">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="image" property="image"/>
        <result column="category" property="category"/>
        <result column="rules" property="rules"/>
        <result column="order" property="order"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM awards WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM awards ORDER BY `order` ASC, id ASC
    </select>

    <select id="selectByCategory" resultMap="BaseResultMap">
        SELECT * FROM awards
        <if test="category != null and category != ''">
            WHERE category = #{category}
        </if>
        ORDER BY `order` ASC, id ASC
    </select>

</mapper>
