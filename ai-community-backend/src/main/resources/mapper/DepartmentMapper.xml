<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.DepartmentMapper">

    <resultMap id="DepartmentStatsResultMap" type="com.aicommunity.dto.DepartmentStatsResponse">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="post_count" property="postCount"/>
        <result column="contributor_count" property="contributorCount"/>
    </resultMap>

    <select id="selectStats" resultMap="DepartmentStatsResultMap">
        SELECT 
            d.id,
            d.name,
            COUNT(DISTINCT p.id) as post_count,
            COUNT(DISTINCT p.author_id) as contributor_count
        FROM departments d
        LEFT JOIN users u ON d.id = u.department_id
        LEFT JOIN posts p ON u.id = p.author_id
        <if test="zone != null and zone != ''">
            AND p.zone = #{zone}
        </if>
        GROUP BY d.id, d.name
        ORDER BY post_count DESC, contributor_count DESC
    </select>

</mapper>
