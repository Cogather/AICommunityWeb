<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.FavoriteMapper">

    <resultMap id="PostResultMap" type="com.aicommunity.entity.Post">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="summary" property="summary"/>
        <result column="content" property="content"/>
        <result column="cover" property="cover"/>
        <result column="author_id" property="authorId"/>
        <result column="zone" property="zone"/>
        <result column="tool_id" property="toolId"/>
        <result column="is_featured" property="isFeatured"/>
        <result column="views" property="views"/>
        <result column="likes" property="likes"/>
        <result column="comments" property="comments"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO favorites (user_id, post_id, create_time)
        VALUES (#{userId}, #{postId}, NOW())
    </insert>

    <delete id="deleteByUserAndPost">
        DELETE FROM favorites WHERE user_id = #{userId} AND post_id = #{postId}
    </delete>

    <select id="existsByUserAndPost" resultType="boolean">
        SELECT COUNT(*) > 0 FROM favorites WHERE user_id = #{userId} AND post_id = #{postId}
    </select>

    <select id="selectPostsByUserId" resultMap="PostResultMap">
        SELECT p.* FROM posts p
        INNER JOIN favorites f ON p.id = f.post_id
        WHERE f.user_id = #{userId}
        ORDER BY f.create_time DESC
    </select>

    <select id="countByUserId" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM favorites WHERE user_id = #{userId}
    </select>

    <delete id="deleteByPostId">
        DELETE FROM favorites WHERE post_id = #{postId}
    </delete>

</mapper>
