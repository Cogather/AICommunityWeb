<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.ToolBannerMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.ToolBanner">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="image" property="image" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="link" property="link" jdbcType="VARCHAR"/>
        <result column="desc" property="desc" jdbcType="VARCHAR"/>
        <result column="order" property="order" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectToolBanners" resultMap="BaseResultMap">
        SELECT 
            id,
            image,
            title,
            link,
            `desc`,
            `order`,
            create_time
        FROM t_new_tool_banners
        <!-- 注意：数据库表t_new_tool_banners中没有tool_id字段，如需按工具ID过滤，需要添加该字段 -->
        <!-- <where>
            <if test="toolId != null">
                AND tool_id = #{toolId}
            </if>
        </where> -->
        ORDER BY `order` ASC, id ASC
    </select>

    <delete id="deleteAll">
        DELETE FROM t_new_tool_banners
    </delete>

    <insert id="insert" parameterType="com.aicommunity.entity.ToolBanner" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_new_tool_banners (
            image,
            title,
            link,
            `desc`,
            `order`,
            create_time
        ) VALUES (
            #{image},
            #{title},
            #{link},
            #{desc},
            #{order},
            #{createTime}
        )
    </insert>

</mapper>
