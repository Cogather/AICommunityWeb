<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.HomeBannerConfigMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.HomeBannerConfig">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="banner_image" property="bannerImage" jdbcType="VARCHAR"/>
        <result column="banner_title" property="bannerTitle" jdbcType="VARCHAR"/>
        <result column="banner_desc" property="bannerDesc" jdbcType="VARCHAR"/>
        <result column="banner_url" property="bannerUrl" jdbcType="VARCHAR"/>
        <result column="order" property="order" jdbcType="INTEGER"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectAllOrderByOrder" resultMap="BaseResultMap">
        SELECT 
            id,
            banner_image,
            banner_title,
            banner_desc,
            banner_url,
            `order`,
            update_time
        FROM t_new_home_banner_config
        ORDER BY `order` ASC, id ASC
    </select>

    <delete id="deleteAll">
        DELETE FROM t_new_home_banner_config
    </delete>

    <insert id="insert" parameterType="com.aicommunity.entity.HomeBannerConfig" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_new_home_banner_config (
            banner_image,
            banner_title,
            banner_desc,
            banner_url,
            `order`,
            update_time
        ) VALUES (
            #{bannerImage},
            #{bannerTitle},
            #{bannerDesc},
            #{bannerUrl},
            #{order},
            #{updateTime}
        )
    </insert>

</mapper>
