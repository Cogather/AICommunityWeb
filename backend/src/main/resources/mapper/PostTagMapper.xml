<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.PostTagMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.PostTag">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="label_id" property="labelId" jdbcType="INTEGER"/>
        <result column="tag" property="tag" jdbcType="VARCHAR"/>
        <result column="color" property="color" jdbcType="VARCHAR"/>
        <result column="bg" property="bg" jdbcType="VARCHAR"/>
        <result column="border_color" property="borderColor" jdbcType="VARCHAR"/>
        <result column="deleted" property="deleted" jdbcType="TINYINT"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="PostTagRelationMap" type="com.aicommunity.entity.PostTagRelation">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="post_id" property="postId" jdbcType="VARCHAR"/>
        <result column="tag_id" property="tagId" jdbcType="INTEGER"/>
        <result column="deleted" property="deleted" jdbcType="TINYINT"/>
    </resultMap>

    <select id="selectByLabelId" resultMap="BaseResultMap">
        SELECT 
            id,
            label_id,
            tag,
            color,
            bg,
            border_color,
            deleted,
            user_id
        FROM t_new_posts_tag
        WHERE label_id = #{labelId}
          AND (deleted IS NULL OR deleted = 0)
        LIMIT 1
    </select>

    <select id="selectAllLabel" resultMap="BaseResultMap">
        SELECT
            id,
            label_id,
            tag,
            color,
            bg,
            border_color,
            deleted,
            user_id
        FROM t_new_posts_tag
        WHERE (deleted IS NULL OR deleted = 0)
    </select>

    <select id="selectPostTagRelation" resultMap="PostTagRelationMap">
        SELECT
            id,
            post_id,
            tag_id,
            deleted
        FROM t_new_posts_tag_relation
        WHERE (deleted IS NULL OR deleted = 0)
    </select>

    <select id="selectByPostId" resultMap="PostTagRelationMap">
        SELECT
            id,
            post_id,
            tag_id,
            deleted
        FROM t_new_posts_tag_relation
        WHERE post_id = #{postId}
          AND (deleted IS NULL OR deleted = 0)
    </select>

    <select id="selectByTagId" resultMap="PostTagRelationMap">
        SELECT
            id,
            post_id,
            tag_id,
            deleted
        FROM t_new_posts_tag_relation
        WHERE tag_id = #{tagId}
          AND (deleted IS NULL OR deleted = 0)
    </select>

    <insert id="batchInsertRelations">
        INSERT INTO t_new_posts_tag_relation (
            post_id,
            tag_id,
            deleted
        ) VALUES
        <foreach collection="relations" item="relation" separator=",">
            (#{relation.postId}, #{relation.tagId}, #{relation.deleted})
        </foreach>
    </insert>

    <delete id="deleteByPostId">
        DELETE FROM t_new_posts_tag_relation
        WHERE post_id = #{postId}
    </delete>

    <delete id="deleteByTagId">
        DELETE FROM t_new_posts_tag_relation
        WHERE tag_id = #{tagId}
    </delete>

    <delete id="deleteRelation">
        DELETE FROM t_new_posts_tag_relation
        WHERE post_id = #{postId} AND tag_id = #{tagId}
    </delete>

    <update id="softDeleteByPostId">
        UPDATE t_new_posts_tag_relation
        SET deleted = 1
        WHERE post_id = #{postId}
    </update>

    <select id="selectAllActiveRelations" resultMap="PostTagRelationMap">
        SELECT
            id,
            post_id,
            tag_id,
            deleted
        FROM t_new_posts_tag_relation
        WHERE (deleted IS NULL OR deleted = 0)
    </select>

</mapper>
