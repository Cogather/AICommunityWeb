<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.HomeToolMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.HomeTool">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="desc" property="desc" jdbcType="VARCHAR"/>
        <result column="logo" property="logo" jdbcType="VARCHAR"/>
        <result column="color" property="color" jdbcType="VARCHAR"/>
        <result column="link" property="link" jdbcType="VARCHAR"/>
        <result column="order" property="order" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectAllOrderByOrder" resultMap="BaseResultMap">
        SELECT 
            id,
            name,
            `desc`,
            logo,
            color,
            link,
            `order`,
            create_time,
            update_time
        FROM t_new_home_tool
        ORDER BY `order` ASC, id ASC
    </select>

    <delete id="deleteAll">
        DELETE FROM t_new_home_tool
    </delete>

    <insert id="insert" parameterType="com.aicommunity.entity.HomeTool" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_new_home_tool (
            name,
            `desc`,
            logo,
            color,
            link,
            `order`,
            create_time,
            update_time
        ) VALUES (
            #{name},
            #{desc},
            #{logo},
            #{color},
            #{link},
            #{order},
            #{createTime},
            #{updateTime}
        )
    </insert>

</mapper>
