<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicommunity.mapper.DraftMapper">

    <resultMap id="BaseResultMap" type="com.aicommunity.entity.Draft">
        <id column="draft_id" property="draftId" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="zone" property="zone" jdbcType="VARCHAR"/>
        <result column="tool_id" property="toolId" jdbcType="INTEGER"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="summary" property="summary" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="LONGVARCHAR"/>
        <result column="cover" property="cover" jdbcType="VARCHAR"/>
        <result column="tags" property="tags" jdbcType="VARCHAR"/>
        <result column="saved_at" property="savedAt" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT 
            draft_id,
            user_id,
            zone,
            tool_id,
            title,
            summary,
            content,
            cover,
            tags,
            saved_at,
            create_time,
            update_time
        FROM t_new_post_drafts
        WHERE user_id = #{userId}
        ORDER BY saved_at DESC
        LIMIT 1
    </select>

    <insert id="insertDraft" parameterType="com.aicommunity.entity.Draft">
        INSERT INTO t_new_post_drafts (
            draft_id,
            user_id,
            zone,
            tool_id,
            title,
            summary,
            content,
            cover,
            tags,
            saved_at,
            create_time,
            update_time
        ) VALUES (
            #{draftId},
            #{userId},
            #{zone},
            #{toolId},
            #{title},
            #{summary},
            #{content},
            #{cover},
            #{tags},
            #{savedAt},
            #{createTime},
            #{updateTime}
        )
    </insert>

    <update id="updateDraft" parameterType="com.aicommunity.entity.Draft">
        UPDATE t_new_post_drafts
        <set>
            <if test="zone != null">zone = #{zone},</if>
            <if test="toolId != null">tool_id = #{toolId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="summary != null">summary = #{summary},</if>
            <if test="content != null">content = #{content},</if>
            <if test="cover != null">cover = #{cover},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="savedAt != null">saved_at = #{savedAt},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteDraft">
        DELETE FROM t_new_post_drafts
        WHERE user_id = #{userId}
    </delete>

</mapper>
